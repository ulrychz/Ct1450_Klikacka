@page "/"
@inject IJSRuntime JS

<PageTitle>Klikačka</PageTitle>

<h1>Klikačka!</h1>
<div>
    <table>
        @for (int i = 0; i < grafika.Pole.GetLength(0); i++)
        {
            var rad = i;
            <tr>
                @for (int j = 0; j < grafika.Pole.GetLength(1); j++)
                {
                    var sloup = j;
                    <td class="@grafika.Pole[rad,sloup].StyleClassName" @onclick = "()=>grafika.OnCellClick(grafika.Pole[rad,sloup])" >@grafika.Pole[i,j].Hodnota</td>
                }
            </tr>
        }
       
    </table>
</div>

